@if (LicenseStatusList == null)
{
    <LoadingText />
}
else
{
    <EditForm Model="Filter" OnValidSubmit="FilteredAsync">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">ID</label>
                <InputText id="filterVaultId" @bind-Value="Filter.Id" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">MAC</label>
                <InputText id="filterMac" @bind-Value="Filter.MAC" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">RFID</label>
                <InputText id="filterRfid" @bind-Value="Filter.RFID" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Battery</label>
                <select id="filterBattery" @bind="Filter.Battery" class="form-control">
                    <option selected></option>
                    <option value="low">Low</option>
                    <option value="high">High</option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Firmware</label>
                <InputText id="filterFirmware" @bind-Value="Filter.Firmware" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Last Synced Start Date</label>
                <DateTimePicker @bind-Value="Filter.LastSyncedStartDate" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Last Synced End Date</label>
                <DateTimePicker @bind-Value="Filter.LastSyncedEndDate" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Employee</label>
                <InputText id="filterEmployee" @bind-Value="Filter.Employee" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Company</label>
                <InputText id="filterCompany" @bind-Value="Filter.Company" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Department</label>
                <InputText id="filterDepartment" @bind-Value="Filter.Department" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Vault Status</label>
                <select id="filterVaultStatus" @bind="Filter.Status" class="form-control">
                    <option selected></option>
                    @foreach (var item in VaultStatusList)
                    {
                        <option value="@item.Text">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">License Status</label>
                <select id="filterStatus" @bind="Filter.LicenseStatus" class="form-control">
                    <option selected></option>
                    @foreach (var item in LicenseStatusList)
                    {
                        <option value="@item.Text">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Till License End Date</label>
                <InputDate id="filterLicenseEndDate" @bind-Value="Filter.LicenseEndDate" class="form-control" />
            </div>
            <div class="col align-self-end text-right form-group">
                <ButtonSpinner Text="Clear" Class="btn btn-secondary" Callback="ClearAsync"/>
                <ButtonSpinner @ref="ButtonSpinner" Submit="true" Text="Filter" Class="btn btn-primary" />
            </div>
        </div>
    </EditForm>
}