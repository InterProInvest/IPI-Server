@inherits OwningComponentBase

@if (!Initialized)
{
    <LoadingText />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="shared account" CloseAction="ModalDialogService.CancelAsync" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">You want to delete account <b>@Account.Name</b>?</h5>
        <div class="text-right">
            <button type="button" class="btn btn-secondary mr-1" @onclick="@(async () => await ModalDialogService.CancelAsync())">Cancel</button>
            <ButtonSpinner Text="Delete" Class="btn btn-danger" Callback="DeleteAccoountAsync" />
        </div>
    }
}