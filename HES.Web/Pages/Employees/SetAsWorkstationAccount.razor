@inherits OwningComponentBase

@if (!Initialized)
{
    <LoadingText />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="account" CloseAction="ModalDialogService.CancelAsync" />
    }
    else
    {
        <h5 class="text-gray mb-4 ">Set this account as a primary account?</h5>
        <div class="text-right">
            <button type="button" class="btn btn-secondary mr-1" @onclick="CloseAsync">Cancel</button>
            <ButtonSpinner Text="Set" Class="btn btn-primary btn-min-w" Callback="SetAsWorkstationAccountAsync" />
        </div>
    }
}