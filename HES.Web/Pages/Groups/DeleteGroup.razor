@inherits OwningComponentBase

@if (Group == null)
{
    <LoadingText />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="group" CloseAction="ModalDialogService.CancelAsync" />
    }
    else
    {
        <h5 class="mb-4 text-break">You want to delete group @Group.Name?</h5>
        <div class="form-group text-right mb-0">
            <button type="button" class="btn btn-secondary" @onclick="@(async () => await ModalDialogService.CloseAsync())">Cancel</button>
            <ButtonSpinner Text="Delete" Class="btn btn-danger" Callback="DeleteAsync" />
        </div>
    }
}